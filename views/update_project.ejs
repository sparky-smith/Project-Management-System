 <!-- Main Site -->
 <main id="site-update">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/"><i class="fa-solid fa-house"></i> </a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update project</h2>
            <span class="text-light">Use the below form to update an account</span>
        </div>
     <!-- form handling -->
<form  method="POST" id="update_project">
    <div class="new_project">
        <div class="form-group">
            <label for="Pno">Project Number</label>
            <input type="text" name="Pno" required value="<%= project.p_no %>">
        </div>
        <div class="form-group"> 
            <label for="Pname">Project Name</label>
        <input type="text" name="Pname" required  value="<%= project.p_name %>">
        </div>
        <div class="form-group">
            <label for="type">Type</label>
            <select name="type" id="type"  value="<%= project.type %>">
                <option value="M">M</option>
                <option value="I">I</option>
                <option value="U">U</option>
                <option value="S">S</option>
                <option value="T">T</option>
            </select>
        </div>
        <div class="form-group">
            <label for="sdate">Sanction Date</label>
            <input type="date" name="sdate" required value="<%= project.sanction_date %>">
        </div>
        <div class="form-group">
            <label for="pdc">PDC (Original)</label>
            <input type="number" name="pdc" required value="<%= project.pdc_o_in_months %>">
            <span>(months)</span>
        </div>
        <div class="form-group">
            <label for="cost">Cost (Original)</label>
            <input type="number" name="cost" required value="<%= project.cost_o_in_lakhs %>">
            <span>(lakhs)</span>
        </div>
        <div class="form-group">
            <label for="rpdc">PDC (Revised)</label>
            <input type="number" name="rpdc" required value="<%= project.pdc_r_in_months %>">
            <span>(months)</span>
        </div>
        <div class="form-group">
            <label for="cost">Cost (Revised)</label>
            <input type="number" name="rcost" required value="<%= project.cost_r_in_lakhs %>">
            <span>(lakhs)</span>
        </div>
        <div class="form-group">
            <label for="exp">Actual Expenditure</label>
            <input type="number" name="exp" required value="<%= project.act_exp_in_lakhs %>">
            <span>(lakhs)</span>
        </div>
        <div class="form-group">
            <label for="status">Status</label>
            <select name="status" id="status" value="<%= project.status%>">
                <option value="ongoing">Ongoing</option>
                <option value="completed">Completed</option>
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
        
    </div>
</main>


<!-- /Main Site -->






